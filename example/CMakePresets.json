{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows",
      "binaryDir": "${sourceDir}/__output/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_SYSTEM_VERSION": "10.0.19041.0",
        "CMAKE_VS_WINDOWS_TARGET_PLATFORM_VERSION_MAXIMUM": "10.0.26100.0",
        "CPPWINRT_PROJECTION_ROOT_PATH": "${sourceDir}/__cppwinrt",
        "CPPWINRT_PROJECTION_NUGET_VERSION": "10.0.19041.2",
        "CPPWINRT_VERSION": "2.0.240405.15",
        "NUGET_PACKAGE_ROOT_PATH": "${sourceDir}/__packages",
        "TOOLCHAIN_TOOLS_PATH": "${sourceDir}/__tools",
        "WINDOWSCMAKE_DIR": "${sourceDir}/../WindowsCMake"
      }
    },
    {
      "name": "windows-msvc",
      "inherits": "windows",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "./Build/WindowsToolchain/Windows.MSVC.toolchain.cmake",
        "CMAKE_VS_VERSION_PRERELEASE": "ON",
        "CMAKE_VS_VERSION_RANGE": "[16.0,18.0)",
        "VS_EXPERIMENTAL_MODULE": "ON",
        "VS_USE_SPECTRE_MITIGATION_RUNTIME": "OFF"
      }
    },
    {
      "name": "+asan",
      "hidden": true,
      "displayName": "Mixin '+asan' enablement",
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "windows-clang",
      "inherits": "windows",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "./Build/WindowsToolchain/Windows.Clang.toolchain.cmake"
      }
    },
    {
      "name": "windows-clangcl",
      "inherits": "windows-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER_FRONTEND_VARIANT": "MSVC",
        "CMAKE_CXX_COMPILER_FRONTEND_VARIANT": "MSVC"
      }
    },
    {
      "name": "windows-msvc-x64",
      "inherits": "windows-msvc",
      "displayName": "Configure 'windows-msvc-x64'",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-msvc-x64+asan",
      "inherits": ["windows-msvc-x64", "+asan"],
      "displayName": "Configure 'windows-msvc-x64+asan'"
    },
    {
      "name": "windows-msvc-x86",
      "inherits": "windows-msvc",
      "displayName": "Configure 'windows-msvc-x86'",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "X86"
      }
    },
    {
      "name": "windows-msvc-arm64",
      "inherits": "windows-msvc",
      "displayName": "Configure 'windows-msvc-arm64'",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "ARM64"
      }
    },
    {
      "name": "windows-clang-x64",
      "inherits": "windows-clang",
      "displayName": "Configure 'windows-clang-x64'",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-clang-x64+asan",
      "inherits": ["windows-clang-x64", "+asan"],
      "displayName": "Configure 'windows-clang-x64+asan'"
    },
    {
      "name": "windows-clangcl-x64",
      "inherits": "windows-clangcl",
      "displayName": "Configure 'windows-clangcl-x64'",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "windows-clangcl-x64+asan",
      "inherits": ["windows-clangcl-x64", "+asan"],
      "displayName": "Configure 'windows-clangcl-x64+asan'"
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-x64",
      "configurePreset": "windows-msvc-x64"
    },
    {
      "name": "windows-msvc-x86",
      "configurePreset": "windows-msvc-x86"
    },
    {
      "name": "windows-msvc-arm64",
      "configurePreset": "windows-msvc-arm64"
    },
    {
      "name": "windows-clang-x64",
      "configurePreset": "windows-clang-x64"
    },
    {
      "name": "windows-clangcl-x64",
      "configurePreset": "windows-clangcl-x64"
    },
    {
      "name": "windows-msvc-x64+asan",
      "configurePreset": "windows-msvc-x64+asan",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-clang-x64+asan",
      "configurePreset": "windows-clang-x64+asan",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-clangcl-x64+asan",
      "configurePreset": "windows-clangcl-x64+asan",
      "configuration": "RelWithDebInfo"
    }
  ]
}
